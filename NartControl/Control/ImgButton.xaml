<Button      x:Class="NartControl.Control.ImgButton"             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:local="clr-namespace:NartControl.Control"  
             mc:Ignorable="d"
             MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" 
             Background="{x:Null}" Height="50" Width="50" BorderThickness="0">
    <Button.Content>
        <StackPanel Height="47" Width="48" Orientation="Vertical" HorizontalAlignment="Center">
            <Image x:Name="ButtonImage"
                   Height="31"
                   Source="{Binding ButtonImageSource, RelativeSource={RelativeSource AncestorType=local:ImgButton}}"
                   VerticalAlignment="Stretch"/>
            <Label HorizontalContentAlignment="Stretch" FontSize="10" VerticalContentAlignment="Top"  Height="22"
                   HorizontalAlignment="Stretch"
                   Content="{Binding ButtonLabel, RelativeSource={RelativeSource AncestorType=local:ImgButton}}"/>
        </StackPanel>
    </Button.Content>
</Button>
