<UserControl x:Class="NartControl.Control.FilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NartControl.Control"
             mc:Ignorable="d" 
             d:DesignHeight="23.517" d:DesignWidth="144.915">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TB"  Text="{Binding SafeFileName, RelativeSource={RelativeSource AncestorType=local:FilePicker}}" VerticalContentAlignment="Center"/>
        <Button Grid.Column="1" MinWidth="40" Margin="4 0 0 0" 
                                Visibility="Visible"
                                Content="{Binding BrowseButtonContent}" 
                                ToolTip="{Binding BrowseButtonToolTip}" 
                                Click="Button_Click" 
                                />

    </Grid>
</UserControl>
